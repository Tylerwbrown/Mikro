<div class="row">
  <div class="col-xs-12 col-md-6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @post.title %></span>
        <p><%= @post.content %></p>
      </div>
      <div class="card-action white-text">
        <label>Creator</label>
        <%= User.find(@post.user_id).name %>
      </div>
    </div>
  </div>
</div>
