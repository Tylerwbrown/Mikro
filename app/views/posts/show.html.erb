<div class="row">
  <div class="col s12 l6"><%= render "post", post: @post, full_post: true %></div>
  <div class="col s12 l6"><%= render '/comments/new' %></div>
</div>
<h3>Comments</h3>
<div class="container">
  <% @comments.each do |comment| %>
    <%= render '/comments/show', comment: comment%>
  <% end %>
</div>
