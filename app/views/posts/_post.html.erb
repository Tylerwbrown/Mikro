<div class="card blue-grey darken-1">
  <div class="card-content white-text">
    <span class="card-title">
      <%= post.title %>
    </span>
    <p class="post_content">
      <%= post.content %>
    </p>
  </div>

  <div class="card-action white-text row">
    <% col_size = full_post ? { l: 6, c: 0, r: 6 } : { l: 4, c: 4, r: 4 } %>
    <%= render 'posts/post_sections/left_action', col_size: col_size[:l], post: post %>
    <%= render 'posts/post_sections/center_action', col_size: col_size[:c], post: post %>
    <%= render 'posts/post_sections/right_action', col_size: col_size[:r], post: post %>
  </div>
</div>
