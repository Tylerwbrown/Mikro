<div class="card blue-grey darken-1">
  <div class="card-content white-text">
    <span class="card-title"><%= post.title %></span>
    <p><%= full_post ? post.content : post.content.truncate(103) %></p>
  </div>
  <div class="card-action white-text row">
    <div class="col s4">
      <label>Creator</label>
      <%= User.find(post.user_id).name %>
    </div>
    <% unless full_post %>
      <div class="col s4 center">
        <a href="/posts/<%= post.id %>">Full Post</a>
      </div>
    <% end %>
    <div class="col s4 right">
      <div class="right">
        <label>Category</label>
        <%= Category.find(post.category.to_i).title if post.category.present? %>
      </div>
    </div>
  </div>
</div>
