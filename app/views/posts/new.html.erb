<div class="col-xs-12">
  <%= simple_form_for(@post, defaults: {required: false}) do |p| %>
    <%= p.input :title, wrapper_class: 'input-field' %>
    <%= p.input :content %>
    <%= p.input :category, label: 'Category(optional)' %>

    <%= p.button :submit, class: 'btn btn-success' %>
  <% end %>
</div>
